<Window x:Class="JobFinder.JobDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JobFinder.ViewModels"
        mc:Ignorable="d"
        Title="Job Details"
        Height="700" Width="600"
        MinHeight="500" MinWidth="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        d:DataContext="{d:DesignInstance Type=vm:JobViewModel}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="SemiBold"
                       TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding CompanyName}" FontSize="16"
                       Foreground="{StaticResource PrimaryBrush}" Margin="0,4,0,0"/>
            <TextBlock Text="{Binding Location}" FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>

            <!-- Status and Platform badges -->
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <!-- Platform Badge -->
                <Border CornerRadius="4" Padding="10,5" Margin="0,0,8,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E3F2FD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Platform}" Value="Upwork">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding PlatformDisplay}" FontSize="12" FontWeight="Medium">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#1565C0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Platform}" Value="Upwork">
                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <!-- Status Badge -->
                <Border CornerRadius="4" Padding="10,5" Margin="0,0,8,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E8E8E8"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Applied">
                                    <Setter Property="Background" Value="#E6F4EA"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Saved">
                                    <Setter Property="Background" Value="#FEF7E0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Ignored">
                                    <Setter Property="Background" Value="#FCE8E8"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsDiscarded}" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock FontSize="12" FontWeight="Medium">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding StatusDisplay}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDiscarded}" Value="True">
                                        <Setter Property="Text" Value="Discarded"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <!-- Easy Apply / Proposal Badge -->
                <Border CornerRadius="4" Padding="10,5"
                        Visibility="{Binding HasEasyApply, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E6F4EA"/>
                        </Style>
                    </Border.Style>
                    <TextBlock FontSize="12" FontWeight="Medium">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Easy Apply"/>
                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Platform}" Value="Upwork">
                                        <Setter Property="Text" Value="Submit Proposal"/>
                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <Border CornerRadius="4" Padding="10,5" Background="#FEF7E0" Margin="8,0,0,0"
                        Visibility="{Binding HasRating, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock FontSize="12" FontWeight="Medium" Foreground="#B8860B">
                        <Run Text="Rating: "/><Run Text="{Binding RatingDisplay, Mode=OneWay}"/>
                    </TextBlock>
                </Border>
            </StackPanel>

            <!-- Upwork Budget Info (only shown for Upwork jobs) -->
            <Border CornerRadius="6" Padding="12" Margin="0,12,0,0" Background="#E8F5E9"
                    Visibility="{Binding IsUpworkJob, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Budget &amp; Client Info" FontWeight="SemiBold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Budget:" FontWeight="Medium" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BudgetDisplay}" Foreground="#1B5E20" Margin="0,0,16,4"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Client Rating:" FontWeight="Medium" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Foreground="#1B5E20" Margin="0,0,0,4">
                            <Run Text="{Binding ClientRating, StringFormat={}{0:F1}, Mode=OneWay}"/><Run Text="/5"/>
                        </TextBlock>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Duration:" FontWeight="Medium" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ProjectDuration}" Foreground="#1B5E20" Margin="0,0,16,4"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Proposals:" FontWeight="Medium" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Foreground="#1B5E20" Margin="0,0,0,4">
                            <Run Text="{Binding ProposalsCount, Mode=OneWay}"/><Run Text=" submitted"/>
                        </TextBlock>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Connects:" FontWeight="Medium" Margin="0,0,8,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Foreground="#1B5E20">
                            <Run Text="{Binding ConnectsRequired, Mode=OneWay}"/><Run Text=" required"/>
                        </TextBlock>

                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Client Spent:" FontWeight="Medium" Margin="0,0,8,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding ClientTotalSpent, StringFormat=\{0:C0\}}" Foreground="#1B5E20"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Recruiter Email -->
                <StackPanel Visibility="{Binding HasRecruiterEmail, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,0,16">
                    <TextBlock Text="Recruiter Email" FontWeight="SemiBold" Margin="0,0,0,8"
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <Border Background="#F0F7FF" CornerRadius="6" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding RecruiterEmail}" TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                            <Button x:Name="CopyEmailButton" Grid.Column="1" Content="Copy"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,6" FontSize="12" Click="CopyEmailButton_Click"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- AI Summary (Croatian) -->
                <StackPanel Margin="0,0,0,16">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="AI Sazetak (HR)" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        <Button x:Name="CopySummaryButton" Grid.Column="1" Content="Copy"
                                Style="{StaticResource SecondaryButton}"
                                Padding="12,4" FontSize="12" Click="CopySummaryButton_Click"
                                Visibility="{Binding HasSummaryCroatian, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                    <Border Background="#F0F7FF" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="{Binding SummaryCroatian}" TextWrapping="Wrap"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Visibility="{Binding HasSummaryCroatian, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="No AI summary available yet."
                                       FontStyle="Italic" Foreground="{StaticResource TextSecondaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSummaryCroatian}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,8"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Description}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="No description available. Click 'Get Full Details' to load."
                                       FontStyle="Italic" Foreground="{StaticResource TextSecondaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Description}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- AI Debug Info (only visible when enabled in settings) -->
                <StackPanel x:Name="AiDebugPanel" Margin="0,0,0,16"
                            Visibility="{Binding ShowAiDebug, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="AI Debug Info" FontWeight="SemiBold" Margin="0,0,0,8"
                               Foreground="#B8860B"/>

                    <!-- Prompt Sent -->
                    <Border Background="#FFF8E7" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Prompt Sent to AI:" FontWeight="Medium" Foreground="#8B6914" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding AiPromptSent, Mode=OneWay}" IsReadOnly="True"
                                     TextWrapping="Wrap" MaxHeight="200" VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas" FontSize="11"
                                     Background="Transparent" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Raw Response -->
                    <Border Background="#E7F8E7" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Raw AI Response:" FontWeight="Medium" Foreground="#147814" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding AiRawResponse, Mode=OneWay}" IsReadOnly="True"
                                     TextWrapping="Wrap" MaxHeight="200" VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas" FontSize="11"
                                     Background="Transparent" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Additional Info -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Posted:" FontWeight="Medium" Margin="0,0,16,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DatePostedFormatted}"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Experience:" FontWeight="Medium" Margin="0,0,16,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ExperienceLevel}"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Workplace:" FontWeight="Medium" Margin="0,0,16,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WorkplaceType}"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <!-- AI Auto-Apply (Featured for Easy Apply jobs) -->
            <Button x:Name="AutoApplyButton" Margin="0,0,0,8"
                    Click="AutoApplyButton_Click"
                    Visibility="{Binding HasEasyApply, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="AI Auto-Apply" VerticalAlignment="Center"/>
                    <TextBlock Text=" (Reviews before submitting)" FontWeight="Normal" FontSize="11"
                               VerticalAlignment="Center" Opacity="0.9"/>
                </StackPanel>
            </Button>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="GetDetailsButton" Grid.Column="0" Content="Get Full Details"
                        Style="{StaticResource SecondaryButton}" Margin="0,0,4,0"
                        Click="GetDetailsButton_Click"/>
                <Button x:Name="ApplyButton" Grid.Column="1" Content="Manual Apply"
                        Style="{StaticResource PrimaryButton}" Margin="4,0,0,0"
                        Click="ApplyButton_Click"/>
            </Grid>

            <Button x:Name="OpenInBrowserButton" Content="Open in Browser"
                    Style="{StaticResource SecondaryButton}" Margin="0,0,0,8"
                    Click="OpenInBrowserButton_Click"/>

            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="SaveButton" Grid.Column="0" Content="Save"
                        Style="{StaticResource SecondaryButton}" Margin="0,0,4,0"
                        Click="SaveButton_Click"/>
                <Button x:Name="AppliedButton" Grid.Column="1" Content="Mark Applied"
                        Style="{StaticResource SecondaryButton}" Margin="2,0"
                        Click="AppliedButton_Click"/>
                <Button x:Name="IgnoreButton" Grid.Column="2" Content="Ignore"
                        Style="{StaticResource SecondaryButton}" Margin="4,0,0,0"
                        Click="IgnoreButton_Click"/>
            </Grid>

            <Button x:Name="DiscardButton" Content="Discard" Margin="0,8,0,0"
                    Foreground="#CC1016" Click="DiscardButton_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDiscarded}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="RestoreButton" Content="Restore" Margin="0,8,0,0"
                    Foreground="#057642" Click="RestoreButton_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDiscarded}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
