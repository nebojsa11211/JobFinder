<Window x:Class="JobFinder.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JobFinder.ViewModels"
        mc:Ignorable="d"
        Title="Settings - AI Configuration &amp; Auto-Apply"
        Height="800" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" FontSize="24" FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Configure AI, auto-apply, and display settings"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Settings Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- API Key -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="API Key" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Your Kimi K2 API key from Moonshot AI"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <PasswordBox x:Name="ApiKeyBox" Padding="8" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- API Base URL -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="API Base URL" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Base URL for the Kimi API (default: https://api.moonshot.ai/v1)"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding KimiApiBaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Model -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Model" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Kimi model to use (default: kimi-k2-0711-preview)"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding KimiModel, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Prompt Template -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Summary Prompt Template" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="Reset to Default" Style="{StaticResource SecondaryButton}"
                                    Padding="8,4" FontSize="12" Command="{Binding ResetPromptCommand}"/>
                        </Grid>
                        <TextBlock Text="Use {description} as placeholder for the job description"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,8,0,8"/>
                        <TextBox Text="{Binding SummaryPrompt, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" FontSize="13" FontFamily="Consolas"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="200" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Display Options -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Display Options" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox IsChecked="{Binding ShowDiscardedJobs}" Content="Show discarded jobs in job list"
                                  ToolTip="When enabled, discarded jobs will be visible in the job list"/>
                    </StackPanel>
                </Border>

                <!-- Browser Options -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Browser Options" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox IsChecked="{Binding StartBrowserMinimized}" Content="Start browser minimized"
                                  ToolTip="When enabled, the browser window starts minimized instead of maximized"/>
                    </StackPanel>
                </Border>

                <!-- Debug Options -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Debug Options" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox IsChecked="{Binding ShowAiDebug}" Content="Show AI debug info (prompt sent and response)"
                                  ToolTip="When enabled, shows the exact prompt sent to AI and raw response in job details"/>
                    </StackPanel>
                </Border>

                <!-- Separator -->
                <TextBlock Text="AUTO-APPLY CONFIGURATION" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryBrush}" Margin="0,8,0,16"/>

                <!-- Professional Profile -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Professional Profile (CV)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Paste your CV content, skills, and experience here. This is used by AI to generate personalized application messages and answer questions."
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding UserProfessionalProfile, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" FontSize="13"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="180" VerticalScrollBarVisibility="Auto"
                                 ToolTip="Include: work experience, skills, technologies, education, achievements"/>
                        <TextBlock Text="{Binding ProfileCharacterCount, StringFormat='Characters: {0}'}"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Cover Letter Template -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Cover Letter Template" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource SecondaryButton}"
                                    Padding="8,4" FontSize="12" Command="{Binding ResetCoverLetterTemplateCommand}"/>
                        </Grid>
                        <TextBlock Text="Template with placeholders: [JobTitle], [Company], [Skills], [Experience]"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,8,0,8"/>
                        <TextBox Text="{Binding CoverLetterTemplate, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" FontSize="13"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="120" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Anti-Bot Settings -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Human-Like Behavior (Anti-Bot)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Random delays between actions to mimic human behavior and avoid account flagging."
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,12" TextWrapping="Wrap"/>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Min delay:" VerticalAlignment="Center" Width="80"/>
                            <Slider Grid.Column="1" Minimum="500" Maximum="5000"
                                    Value="{Binding MinActionDelayMs}"
                                    TickFrequency="500" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock Grid.Column="2" Text="{Binding MinActionDelayMs, StringFormat='{}{0}ms'}"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Max delay:" VerticalAlignment="Center" Width="80"/>
                            <Slider Grid.Column="1" Minimum="1000" Maximum="8000"
                                    Value="{Binding MaxActionDelayMs}"
                                    TickFrequency="500" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock Grid.Column="2" Text="{Binding MaxActionDelayMs, StringFormat='{}{0}ms'}"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Application Message Prompt (Advanced) -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <Expander Header="Advanced: Application Message Prompt" IsExpanded="False">
                        <StackPanel Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Placeholders: {profile}, {jobDescription}, {jobTitle}, {company}"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="Reset" Style="{StaticResource SecondaryButton}"
                                        Padding="8,4" FontSize="12" Command="{Binding ResetApplicationPromptCommand}"/>
                            </Grid>
                            <TextBox Text="{Binding ApplicationMessagePrompt, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" FontSize="12" FontFamily="Consolas"
                                     AcceptsReturn="True" TextWrapping="Wrap"
                                     Height="150" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Expander>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource SuccessBrush}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Cancel" Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0" Click="CancelButton_Click"/>
                <Button Grid.Column="2" Content="Save" Style="{StaticResource PrimaryButton}"
                        Command="{Binding SaveCommand}" Click="SaveButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
